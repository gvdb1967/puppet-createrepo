#!/bin/bash

if [ $(whoami) != '<%= @repo_owner %>' ]; then
    echo "You really should be <%= @repo_owner %> while running $0"
    exit 1
fi
<% if @use_lockfile == true %>
	flock -e -n <%= @lockfile %> <%= @createrepo_update %>
<% else %>
	<% if @use_filter == true %>
		if  [[ "$1"  == [[:alnum:]]*.rpm ]]; then
    	<%= @createrepo_update %>
		fi
	<% else %>
    <%= @createrepo_update %>
	<% end -%>
<% end -%>

